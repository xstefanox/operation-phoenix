#/bin/sh

if [ ! -e "/etc/motd.puppet" ];then exit 0; fi

IFS=$'\n'
set -f

echo -e "\033[0;35m++++++++++++++++++++++++++++++++++++: \033[0;37mPuppet Modules\033[0;35m :++++++++++++++++++++++++++++++++++++++++"
for module in `cat /etc/motd.puppet | cut -d ' ' -f6-`; 
do echo -e "\033[0;35m+    \033[0;37m -- \033[1;32m $module"; done;
echo -e "\033[0;35m++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++"
echo -e "\033[0m"
